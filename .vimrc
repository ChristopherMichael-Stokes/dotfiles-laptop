execute pathogen#infect()
filetype plugin indent on
syntax on 
set wildmenu
set ruler
set smartcase
set hlsearch
set incsearch
set lazyredraw
set magic
set showmatch
set mat=2
set ai
set si
set wrap
set noexpandtab
set shiftwidth=8
set tabstop=8
set mouse=a
autocmd FileType haskell setlocal tabstop=8 softtabstop=4 shiftwidth=4  expandtab
inoremap jj <Esc>
